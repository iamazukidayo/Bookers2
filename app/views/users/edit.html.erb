<div class="container">
 <div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">



   <h1>User info</h1>
     <% if @user.errors.any? %>
       <%= @user.errors.count %>error prohibited this obj from being saved:
        <ul>
         <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        </ul>
       <% end %>
     <% end %>

     <%= form_with model: @user do |f| %>

     <div class="form-group">
      <p><label for="inputName">Name</label></p>
       <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
     </div>

     <div class="form-group">
      <p><label for="inputImage">Image</label></p>
       <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
     </div>

     <div class="form-group">
       <p><label for="user_introduction">Introduction</label></p>
       <%= f.text_area :introduction, autofocus: true, id:"inputintroduction", placeholder:"自己紹介文" %>
     </div>

     <div class="form-group">
       <%= f.submit 'Update User', class:"btn btn-secondary" %>
     </div>

    </div>
    </div>
    </div>


 <% end %>
